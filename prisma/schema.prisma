// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/**
 * models
 */
model Technology {
  id              Int     @id @default(autoincrement())
  name            String  @unique
  desc            String
  hexColor        String  @map("hex_color")
  officialWebsite String  @map("official_website")
  logoUrl         String  @map("logo_url")
  isBackend       Boolean @map("is_backend")

  projects Project[]
}

model Project {
  id            Int             @id @default(autoincrement())
  name          String
  description   String
  repositoryUrl String          @map("repository_url")
  deployUrl     String          @map("deploy_url")
  thumbnailUrl  String          @map("thumbnail_url")
  category      ProjectCategory @relation(fields: [fkCategoryId], references: [id])

  fkCategoryId Int
  skills       Skill[]
  technologies Technology[]
}

model Skill {
  id   Int    @id @default(autoincrement())
  name String

  project Project[]
}

model ProjectCategory {
  id   Int    @id @default(autoincrement())
  name String

  project Project[]
}

model Message {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now())
  senderName  String
  senderEmail String
  subject     String
  text        String
}
